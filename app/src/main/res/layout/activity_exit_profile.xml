<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ExitProfileActivity"
    android:id="@+id/relExit">


    <ImageView
        android:id="@+id/imagePrintScreen"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <Button
        android:id="@+id/buttonExit"
        android:layout_width="233dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewProfile"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:background="@drawable/roundedbuttonexit"
        android:text="Вихід"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:elevation="20dp" />

    <ImageView
        android:id="@+id/imageViewClose"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:srcCompat="@drawable/close_circle"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"/>

    <TextView
        android:id="@+id/textViewProfile"
        android:layout_width="830dp"
        android:layout_height="85dp"
        android:layout_centerInParent="true"
        android:text=""
        android:textAlignment="center"
        android:textSize="50sp"
        xmlns:android="http://schemas.android.com/apk/res/android"  />

    <ImageView
        android:id="@+id/imageViewProfile"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginBottom="10dp"
        android:layout_above="@id/textViewProfile"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/profile" />


</RelativeLayout>