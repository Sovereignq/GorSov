<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:id="@+id/relMain">

    <ImageView
        android:id="@+id/imageProfile"
        android:layout_width="53dp"
        android:layout_height="53dp"
        android:layout_alignBottom="@id/textUsername"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.006"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.009"
        app:srcCompat="@drawable/profile" />

    <TextView
        android:id="@+id/textUsername"
        android:layout_width="501dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-2dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:layout_toRightOf="@id/imageProfile"
        android:text=""
        android:textSize="45sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.066"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textViewTime"
        android:layout_width="105dp"
        android:layout_height="46dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.009" />

    <ImageView
        android:id="@+id/imageViewMaterials"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/logo"
        android:elevation="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/materials" />

    <ImageView
        android:id="@+id/imageViewChrome"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignBottom="@id/imageViewMaterials"
        android:layout_marginStart="40dp"
        android:layout_toRightOf="@id/imageViewMaterials"
        android:background="@drawable/logo"
        android:elevation="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.616"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/chrome" />

    <TextView
        android:id="@+id/textViewMaterials"
        android:layout_width="122dp"
        android:layout_height="102dp"
        android:layout_below="@id/imageViewMaterials"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:text="Додаткові матеріали"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.631"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.584" />

    <TextView
        android:id="@+id/textViewChrome"
        android:layout_width="122dp"
        android:layout_height="102dp"
        android:layout_below="@id/imageViewMaterials"
        android:layout_alignLeft="@id/imageViewChrome"
        android:layout_marginStart="6dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:text="Chrome"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.631"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.584" />

    <ImageView
        android:id="@+id/imageViewReader"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignBottom="@id/imageViewMaterials"
        android:layout_marginEnd="40dp"
        android:layout_toLeftOf="@id/imageViewMaterials"
        android:background="@drawable/logo"
        android:elevation="20dp"
        app:srcCompat="@drawable/reader" />

    <TextView
        android:id="@+id/textViewReader"
        android:layout_width="122dp"
        android:layout_height="102dp"
        android:layout_below="@id/imageViewMaterials"
        android:layout_alignLeft="@id/imageViewReader"
        android:layout_marginStart="12dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:text="Adobe Reader"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.631"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.584" />

    <HorizontalScrollView
        android:id="@+id/Horizontal"
        android:layout_width="1220dp"
        android:layout_height="230dp"
        android:layout_alignTop="@id/imageViewMaterials"
        android:layout_marginStart="25dp"
        android:layout_marginTop="200dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.33">


        <LinearLayout
            android:id="@+id/recentApps"
            android:layout_width="500dp"
            android:layout_height="500dp"
            android:orientation="horizontal" />
    </HorizontalScrollView>


    <ImageButton
        android:id="@+id/buttonDelAll"
        android:layout_width="94dp"
        android:layout_height="63dp"
        android:layout_alignLeft="@+id/imageViewMaterials"
        android:layout_alignTop="@id/Horizontal"
        android:layout_marginTop="235dp"
        android:background="@android:color/holo_blue_dark"
        app:srcCompat="@android:drawable/ic_menu_delete" />

</RelativeLayout>
